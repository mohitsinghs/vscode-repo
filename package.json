{
  "name": "repo",
  "displayName": "Repositories",
  "description": "Switch between repositories with ease",
  "version": "0.2.2",
  "author": "Mohit Singh <mohit@mohitsingh.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohitsinghs/vscode-repo"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.67.0"
  },
  "publisher": "mohitsingh",
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "repository",
    "project",
    "folder",
    "workspace",
    "switch",
    "manage"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onView:repositories"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Repositories",
      "properties": {
        "repositories.treeAsDefault": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, default view will be tree view."
        }
      }
    },
    "views": {
      "repo-explorer": [
        {
          "id": "repositories",
          "name": "Repositories",
          "icon": "$(folder-library)",
          "contextualTitle": "Repositories"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repo-explorer",
          "title": "Repositories",
          "icon": "$(folder-library)"
        }
      ]
    },
    "commands": [
      {
        "command": "_repo.refresh",
        "title": "Repositories: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "_repo.asTree",
        "title": "Repositories: View as Tree",
        "icon": "$(list-tree)",
        "enablement": "!repositories.hasTree"
      },
      {
        "command": "_repo.asList",
        "title": "Repositories: View as List",
        "icon": "$(list-flat)",
        "enablement": "repositories.hasTree"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "_repo.refresh",
          "when": "view == 'repositories'",
          "group": "navigation"
        },
        {
          "command": "_repo.asTree",
          "when": "view == 'repositories' && !isWindows",
          "group": "navigation"
        },
        {
          "command": "_repo.asList",
          "when": "view == 'repositories' && !isWindows",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run -S esbuild-base -- --sourcemap",
    "watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test": "eslint src --ext ts && tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.14.0",
    "typescript": "^4.6.4"
  }
}
