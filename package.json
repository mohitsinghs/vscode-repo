{
  "name": "repo",
  "displayName": "Repositories",
  "description": "Switch between repositories with ease",
  "version": "0.7.1",
  "author": "Mohit Singh <mohit@mohitsingh.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohitsinghs/vscode-repo"
  },
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.67.0"
  },
  "publisher": "mohitsingh",
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "repository",
    "project",
    "folder",
    "workspace",
    "switch",
    "manage"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:repositories",
    "onCommand:_repo.editConfig",
    "onCommand:_repo.listRepos"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "Repositories are not available in virtual workspaces"
    }
  },
  "contributes": {
    "configuration": {
      "title": "Repositories",
      "properties": {
        "repositories.treeAsDefault": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, default view will be tree view."
        },
        "repositories.sortByName": {
          "type": "boolean",
          "default": false,
          "description": "If enabled, tree view will be sorted by repository names."
        },
        "repositories.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, current project is shown in status bar."
        },
        "repositories.preferBundled": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, bundled binary will be preferred otherwise binary from the PATH will be used."
        }
      }
    },
    "views": {
      "repo-explorer": [
        {
          "id": "repositories",
          "name": "Repositories",
          "icon": "$(folder-library)",
          "contextualTitle": "Repositories"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repo-explorer",
          "title": "Repositories",
          "icon": "$(folder-library)"
        }
      ]
    },
    "commands": [
      {
        "command": "_repo.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "_repo.asTree",
        "title": "View as Tree",
        "icon": "$(list-tree)"
      },
      {
        "command": "_repo.asList",
        "title": "View as List",
        "icon": "$(list-flat)"
      },
      {
        "command": "_repo.editConfig",
        "title": "Edit configuration",
        "category": "Repositories",
        "icon": "$(settings-gear)"
      },
      {
        "command": "_repo.listRepos",
        "title": "List Repos",
        "category": "Repositories",
        "icon": "$(list-flat)"
      },
      {
        "command": "_repo.openInNewWindow",
        "title": "Open in New Window",
        "icon": "$(multiple-windows)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "_repo.openInNewWindow",
          "when": "false"
        },
        {
          "command": "_repo.refresh",
          "when": "false"
        },
        {
          "command": "_repo.asTree",
          "when": "false"
        },
        {
          "command": "_repo.asList",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "_repo.refresh",
          "when": "view == 'repositories'",
          "group": "navigation"
        },
        {
          "command": "_repo.asTree",
          "when": "view == 'repositories' && !repositories.hasTree",
          "group": "navigation"
        },
        {
          "command": "_repo.asList",
          "when": "view == 'repositories' && repositories.hasTree",
          "group": "navigation"
        },
        {
          "command": "_repo.editConfig",
          "when": "view == 'repositories'",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "_repo.openInNewWindow",
          "when": "view == 'repositories' && viewItem == 'repository'",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run -S esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run -S esbuild-base -- --sourcemap",
    "watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "test": "eslint src --ext ts && tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "14.x",
    "@types/vscode": "^1.67.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "esbuild": "^0.14.39",
    "eslint": "^8.14.0",
    "typescript": "^4.6.4"
  }
}
